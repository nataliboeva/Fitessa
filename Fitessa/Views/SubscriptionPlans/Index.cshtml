@model IEnumerable<Fitessa.Data.Entities.SubscriptionPlan>
@{
    ViewData["Title"] = "Subscription Plans";
}

<h1>Subscription Plans</h1>
@if (TempData["SubscriptionPurchased"] != null)
{
    <div class="alert alert-success">
        Successfully purchased: <strong>@TempData["SubscriptionPurchased"]</strong>
    </div>
}
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Duration (days)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var plan in Model)
    {
        <tr>
            <td><a asp-action="Details" asp-route-id="@plan.Id">@plan.Name</a></td>
            <td>@plan.Price.ToString("C")</td>
            <td>@plan.DurationDays</td>
            <td>
                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-action="Purchase" asp-route-id="@plan.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-success">Purchase</button>
                    </form>
                }
                else
                {
                    <span class="text-muted">Login to purchase</span>
                }
            </td>
        </tr>
    }
    </tbody>
</table> 